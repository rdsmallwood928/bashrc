# Use an ssh-agent
ForwardAgent yes
ExitOnForwardFailure yes

# Use ControlMaster and persist ssh connections.
ControlMaster   auto
ControlPath     ~/.ssh/tmp/%h_%p_%r

Host specialized.* MC02LL4MBFH00.*
  User          douglas.borg
  ForwardAgent	yes
#
# Set defaults for all other work machines.
Host *.ecovate.com *.readytalk.com
  User          dborg
  ForwardAgent	yes

