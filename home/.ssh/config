# Reuse Exisiting Connections if available
ControlMaster 	auto
ControlPath 	~/.ssh/tmp/%h_%p_%r

# Other Global Settings
ForwardAgent	yes
ExitOnForwardFailure yes

# Set defaults for all hosts
Host *.ecovate.com *.readytalk.com *.1900proxy
	User dborg

# Setup a shortcut to blacksheep (my box) @ the office
Host specialized.1900proxy
	HostName specialized.e.ecovate.com
