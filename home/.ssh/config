# Use an ssh-agent
ForwardAgent yes
ExitOnForwardFailure yes

# Use ControlMaster and persist ssh connections.
ControlMaster   auto
ControlPath     ~/.ssh/tmp/%h_%p_%r

# Access git via proxy.
Host git.ecovate.com git
  User          git
  HostName      git.ecovate.com
  ProxyCommand  ssh -q 1900.readytalk.com nc -q0 %h %p

# Setup a shortcut to access machines at the office via 1900 proxy
Host *.ecovate
  User          dborg
  HostName      %h.com
  ProxyCommand  ssh -q 1900.readytalk.com nc -q0 %h %p

# Set defaults for all work machines.
Host *.ecovate.com *.readytalk.com *.1900proxy
  User          dborg
  ForwardAgent	yes

